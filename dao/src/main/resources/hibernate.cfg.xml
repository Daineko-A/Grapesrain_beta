<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/grapesrain_db</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>


        <mapping class="by.grapesrain.dao.UserDao"/>
        <mapping class="by.grapesrain.dao.RequestDao"/>
        <mapping class="by.grapesrain.dao.AnnouncementDao"/>
        <mapping class="by.grapesrain.entitys.User"/>
        <mapping class="by.grapesrain.entitys.BaseEntity"/>
        <mapping class="by.grapesrain.entitys.UserRole"/>
        <mapping class="by.grapesrain.entitys.Departament"/>
        <mapping class="by.grapesrain.entitys.Request"/>
        <mapping class="by.grapesrain.entitys.Announcement"/>
    </session-factory>
</hibernate-configuration>